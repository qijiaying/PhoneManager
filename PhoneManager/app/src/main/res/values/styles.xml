<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/darkBluePrimaryColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ListItemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/item_textsize</item>
    </style>

    <style name="HomeTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/item_textsize</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/item_textsize</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">@dimen/item_margin</item>
    </style>
    <style name="SettingsToggleButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/item_margin</item>
        <item name="android:background">@drawable/selector_togglebutton</item>
        <item name="android:textOn"> </item>
        <item name="android:textOff"> </item>
    </style>
    <style name="SettingsImageView">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:src">@drawable/icon_pressed</item>
    </style>
    <style name="SoftwareListTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/item_marginLeft</item>
        <item name="android:layout_toEndOf">@+id/iv_appicon</item>
    </style>
    <style name="PhoneStateTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/item_margin</item>
    </style>
    <style name="PSRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="PSTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/item_margin</item>
    </style>
    <!--FileManager页面的style-->
    <style name="FileManagerLeftItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/item_margin</item>
        <item name="android:textSize">28sp</item>
    </style>
    <style name="FileManagerRightItem">
        <item name="android:layout_width">@dimen/item_textsize</item>
        <item name="android:layout_height">@dimen/item_textsize</item>
        <item name="android:layout_marginEnd">@dimen/item_margin</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
